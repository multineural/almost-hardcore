{
	"schemaVersion": 1,
	"id": "almost-hardcore",
	"version": "${version}",
	"name": "Almost-hardcore mod",
	"description": "Minecraft mod for fabric giving players a hardcore game experience with a limited number of lives.",
	"authors": [
		"Jim and Matthew Effinger"
	],
	"contact": {
		"homepage": "https://multineural.net/",
		"sources": "https://github.com/multineural/almost-hardcore"
	},
	"license": "CC0-1.0",
	"icon": "assets/modid/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.multineural.minecraft.AlmostHardcoreMod"
		],
		"client": [
			"net.multineural.minecraft.AlmostHardcoreModClient"
		]
	},
	"mixins": [
		"almost-hardcore.mixins.json",
		{
			"config": "almost-hardcore.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.14.21",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}
